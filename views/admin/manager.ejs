<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>기준정보관리</h2>
        <ol class="breadcrumb">
            <li>
                시스템 정보관리
            </li>
            <li>
                상담원정보관리
            </li>
            <li>
                <strong>등록/수정</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content">

    <form id="adminform" name="adminform" action="/admin/manager" method="post">

        <div class="ibox-content m-b-sm border-bottom">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">아이디</label>
                        <input type="text" name="adminid" id="adminid" class="form-control" placeholder="아이디" value="<%=data.adminID%>">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">암호</label>
                        <input type="password" name="adminpwd" id="adminpwd" class="form-control" placeholder="암호" value="<%=data.adminPWD%>">
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">이름</label>
                        <input type="text" name="adminname" id="adminname" class="form-control" placeholder="이름" value="<%=data.adminName%>">
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label">메일주소</label>
                        <input type="text" name="adminemail" id="adminemail" class="form-control" placeholder="메일주소"
                            value="<%=data.adminEmail%>">
                    </div>
                </div>
            </div>


            <div class="row">

                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">수정자</label>
                        <input type="text" name="updateuid" id="updateuid" class="form-control" placeholder="수정자"
                            readonly>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">수정일시</label>
                        <input type="text" name="updatedate" id="updatedate" class="form-control" placeholder="수정일시"
                            readonly value="<%=moment(data.updatedAt).format("YYYY-MM-DD HH:mm:ss")%>">
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">사용여부</label>
                        <div class="form-group">
                            <% if(data.useYN == true){ %>
                            <input type="checkbox" name="useyn" id="useyn" class="js-switch" checked>
                            <% } else{ %>
                            <input type="checkbox" name="useyn" id="useyn" class="js-switch">
                            <% } %>
                        </div>
                    </div>
                </div>

            </div>

            <div class="row aligncenter">
                <div class="text-center">
                    <input type="hidden" name="id" id="id" value="<%=data.id%>">
                    <input type="hidden" name="saveMode" id="saveMode" value="<%=saveMode%>">
                    <button type="submit" class="btn btn-primary">저장</button>
                    <a href="/admin/list" class="btn btn-info">목록</a>
                </div>
            </div>

        </div>
    </form>

</div>

<script>
    //Switchery
    var elem = document.querySelector('.js-switch');
    var switchery = new Switchery(elem, { color: '#1AB394' });

    $(document).ready(function () {

    });

    $('#adminform').submit(function () {
        if ($("#adminid").val() == "") {
            alert("상담원 아이디를 입력해주세요.");
            $("#adminid").focus();
            return false;
        }

        if ($("#saveMode").val() == "C") {
            if ($("#adminpwd").val() == "") {
                alert("상담원 암호를 입력해주세요.");
                $("#adminpwd").focus();
                return false;
            }
        }


        if ($("#adminname").val() == "") {
            alert("상담원 이름을 입력해주세요.");
            $("#adminname").focus();
            return false;
        }

        if ($("#adminemail").val() == "") {
            alert("상담원 메일주소를 입력해주세요.");
            $("#adminemail").focus();
            return false;
        }

        return true;
    });

</script>