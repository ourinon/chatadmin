    //Switchery
    var elem = document.querySelector('.js-switch');
    var switchery = new Switchery(elem, { color: '#1AB394' });

    $(document).ready(function () {

    });

    $('#boardform').submit(function () {
        if ($("#boardname").val() == "") {
            alert("게시판명을 입력해주세요.");
            $("#adminid").focus();
            return false;
        }

        return true;
    });

</script>